{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
        <h1>Créer un compte sur Zefilmuneed</h1>
    </div>
        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-2"><label for="{{ registrationForm.username.vars.id }}"> Nom d'utilisateur</label></div>
            <div class="col-10">{{ form_widget(registrationForm.username) }}</div>
            {{ form_errors(registrationForm.username) }}
        </div>
        <div class="row">
            <div class="col-2"><label for="{{ registrationForm.email.vars.id }}"> Email</label></div>
            <div class="col-10">{{ form_widget(registrationForm.email) }}</div>
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="row">
            <div class="col-6">{{ form_widget(registrationForm.plainPassword) }}</div>
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <button class="btn-primary">Créer le compte</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
