{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
    {% for film in films %}
        <div class="col-4">
        <div class="card">
            <img class="card-img-top" src="{{ film.cover }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ film.title }}</h5>
                <p class="card-text">{{ film.synopsis }}</p>
                <p class="card-text">Réalisé en : {{ film.productionDate|date('d/m/Y') }}</p>
                <p class="card-text">{{ film.note }}</p>
                <a href="#" class="btn btn-primary">Voir la bande-annonce</a>
            </div>
        </div>
        </div>
    {% endfor %}
    </div>
    <div class="row justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(films) }}
        </div>
    </div>
</div>
{% endblock %}
